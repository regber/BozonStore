<h3>Добавить товар в выбранный магазин</h3>


<select id="selector" asp-items="@ViewBag.SelectList"></select>
<div id="createProdForm"></div>

@section Scripts{

    <script>

        $(document).ready(function () {
        $('#selector').change(function (e) {

            var selectorValue=$('#selector').val()

            $('#createProdForm').load('@Url.Action("PartialPage", "Product", new {  area="Product"  })?parentType=' + selectorValue);

        });
    });
    </script>
}