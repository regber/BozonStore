@{
}

@model ShopProduct

<form asp-action="DeleteProduct" asp-controller="Product" asp-area="Product" method="post">
    <input type="hidden" name="id" value="@Model.Product.Id" />
    <div>
        <label asp-for="Product.Title"></label>
        <input asp-for="Product.Title" disabled="" />
    </div>
    <div>
        <img width="100" src="@Url.Action("GetImage","Common", new {path="/Content/Ads/"+@Model.Product.Id+"/"+@Model.Product.Images.FirstOrDefault(i=>i.MainImage)?.Name, area="" })" />
    </div>
    <div>
        <label asp-for="Product.Price"></label>
        <input asp-for="Product.Price" disabled="" />
    </div>
    <a class="btn-primary" href="@Url.Action("Shop","Seller",new {area="User",id=Model.ShopId })">Cancel</a>
    <input type="submit" value="Delete" />
</form>


