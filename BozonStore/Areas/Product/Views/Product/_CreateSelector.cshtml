<h3>partial selector</h3>
<select class="selector" asp-items="@ViewBag.SelectList"></select>

<div class="createProdForm"></div>


<script>
    $(document).ready(function () {
        $('.selector').change(function (e) {

            var selectorValue = $('.selector').last().val();

            $('.createProdForm').last().load('@Url.Action("PartialPage", "Product",new {area="Product"  })?parentType=' + selectorValue);
        });
    });
</script>
